    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".BrainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/initialCounterScreen"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="23sp"
            android:text="Session starts in:">
        </TextView>
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textAlignment="center"
            android:id="@+id/startCountdown"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/mainCounterScreen"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="80dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textAlignment="center"
            android:id="@+id/mainCounter">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ending the session will kill the session
and no results will be calibrated. \n\n Proceed with caution ;)">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_weight="1"
                android:id="@+id/killSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Session"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="141dp"
                android:textColor="@color/white"
                android:background="@drawable/activebtn"
                tools:layout_editor_absoluteY="594dp" />
        </LinearLayout>
    </LinearLayout>

